generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  email    String? @unique
  password String
  role     Role    @default(AGENT_NE)
  username String  @unique
}

model Shipment {
  trackingId         String         @unique
  receiverName       String
  receiverEmail      String
  receiverPhone      String?
  originCountry      String
  receiverAddress    String?
  receiverCity       String?
  receiverPoBox      String?
  destinationCountry String
  weightKg           Float?
  notes              String?
  status             ShipmentStatus @default(CREATED)
  statusHistory      Json?
  currentLocation    String?
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt // ✅ AJOUTEZ CETTE LIGNE

  convoyId          String?
  id                Int             @id @default(autoincrement())
  thankYouEmailSent Boolean         @default(false)
  convoy            Convoy?         @relation(fields: [convoyId], references: [id])
  events            ShipmentEvent[]
}

model ShipmentEvent {
  id          String    @id @default(cuid())
  type        String
  description String?
  location    String?
  occurredAt  DateTime? @default(now())
  createdAt   DateTime  @default(now())
  shipmentId  Int
  shipment    Shipment  @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
}

model Convoy {
  id        String     @id @default(cuid())
  date      DateTime
  direction Direction  @default(NE_TO_CA)
  shipments Shipment[]

  @@unique([date, direction])
}

enum Role {
  ADMIN
  AGENT_CA
  AGENT_NE
}

enum ShipmentStatus {
  CREATED
  RECEIVED_IN_NIGER // ✅ Statut initial pour NE→CA
  RECEIVED_IN_CANADA // ✅ Statut initial pour CA→NE
  IN_TRANSIT // En route
  IN_TRANSIT_STOP // En escale
  IN_CUSTOMS // À la douane
  READY_FOR_PICKUP // Prêt
  DELIVERED // Récupéré
}

enum Direction {
  NE_TO_CA
  CA_TO_NE
}
