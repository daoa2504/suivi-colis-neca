// prisma/schema.prisma

generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  AGENT_CA
  AGENT_NE
}

enum ShipmentStatus {
  CREATED
  RECEIVED_IN_NIGER
  RECEIVED_IN_CANADA
  IN_TRANSIT
  IN_CUSTOMS
  ARRIVED_IN_CANADA
  ARRIVED_IN_NIGER
  PICKED_UP
  OUT_FOR_DELIVERY
  DELIVERED
}

enum Direction {
  NE_TO_CA
  CA_TO_NE
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  role     Role   @default(AGENT_NE)
}

model Shipment {
  id                 Int      @id @default(autoincrement())
  trackingId         String         @unique
  receiverName       String
  receiverEmail      String
  receiverPhone      String?
  originCountry      String
  receiverAddress    String? // NEW
  receiverCity       String? // NEW
  receiverPoBox      String?
  destinationCountry String
  weightKg           Float?
  notes              String?
  status             ShipmentStatus @default(CREATED)
  createdAt          DateTime       @default(now())

  convoyId String?
  convoy   Convoy? @relation(fields: [convoyId], references: [id])

  events ShipmentEvent[]
}

model ShipmentEvent {
  id          String    @id @default(cuid())
  shipmentId  Int
  shipment    Shipment  @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
  type        String
  description String?
  location    String?
  occurredAt  DateTime? @default(now())
  createdAt   DateTime  @default(now())
}

// prisma/schema.prisma

model Convoy {
  id        String    @id @default(cuid())
  date      DateTime
  direction Direction @default(NE_TO_CA)

  shipments Shipment[]

  @@unique([date, direction]) // un convoi par jour et par sens
}
